#!/bin/bash

echo copy anything in $WORKDIR/artifacts to dropins
cp $WORKDIR/local/* /drouter/local/
echo copy anything in $WORKDIR/config to config
cp $WORKDIR/config/*  /drouter/config/

if [ -d "$S2I_DESTINATION/src/local" ]; then
  #echo copy anything in $S2I_DESTINATION/src/local to dropins
  cp $S2I_DESTINATION/src/local/* /drouter/local/
fi

if [ -d "$S2I_DESTINATION/src/config" ]; then
  #echo copy anything in $S2I_DESTINATION/src/config to dropins
  cp $S2I_DESTINATION/src/config/* /drouter/config
fi

exit $rc
